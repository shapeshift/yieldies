{
  "name": "@shapeshiftoss/foxy",
  "version": "0.0.1",
  "description": "Rebasing Rewards for FOX Stakers",
  "main": "index.js",
  "private": false,
  "scripts": {
    "compile": "npx hardhat compile",
    "console": "npx hardhat console",
    "coverage": "npx hardhat coverage --temp artifacts",
    "deploy": "npx hardhat deploy",
    "lint": "yarn run prettier && yarn run lint:ts && yarn run lint:solidity",
    "lint:ts": "npx eslint '**/*.{js,ts}'",
    "lint:solidity": "npx solhint src/**/*.sol",
    "lint:fix": "npx solhint src/**/*.sol --fix && npx eslint '**/*.{js,ts}' --fix",
    "prettier": "npx prettier '**/*.{json,sol,md}' --write",
    "clean": "rm -rf node_modules artifacts cache typechain-types",
    "test": "npx hardhat test --network localhost",
    "local-node": "dotenv cross-var npx hardhat node --fork %MAINNET_URL%"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shapeshift/foxy.git"
  },
  "author": "Shapeshift DAO",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/shapeshift/foxy/issues"
  },
  "homepage": "https://github.com/shapeshift/foxy#readme",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.3",
    "@nomiclabs/hardhat-etherscan": "^2.1.8",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@typechain/ethers-v5": "^8.0.5",
    "@typechain/hardhat": "^3.1.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "^17.0.5",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "chai": "^4.3.4",
    "cross-var": "^1.1.0",
    "dotenv": "^10.0.0",
    "dotenv-cli": "^4.1.1",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.5.2",
    "hardhat": "^2.8.0",
    "hardhat-contract-sizer": "^2.3.0",
    "hardhat-deploy": "^0.9.22",
    "hardhat-gas-reporter": "^1.0.6",
    "prettier": "^2.5.1",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "solidity-coverage": "^0.7.17",
    "ts-node": "^10.4.0",
    "typechain": "^6.1.0",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "@openzeppelin/contracts": "4.4.1"
  }
}
